{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",   // compiled JS output
    "rootDir": "src",   // your TS source folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "generateData.ts"],
  "exclude": ["node_modules"]
}
